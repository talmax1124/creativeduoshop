{
  "name": "proshop",
  "version": "1.0.0",
  "description": "MERN shopping cart app",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node backend/server",
    "server": "nodemon backend/server",
    "client": "npm start --prefix frontend",
    "tailwindwatch": "npx tailwindcss -i /frontend/src/tailwind.css -c /frontend/tailwind.config.js -o site/style.css --watch --no-map",
    "buildtailwind": "npx tailwindcss -i /frontend/src/tailwind.css -c /frontend/tailwind.config.js -o site/style.css --minify --no-map",
    "dev": "concurrently \"npm run client\" \"npm run server\" tailwindwatch",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "author": "Brad Traversy",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^6.1.2",
    "@stripe/stripe-js": "^1.35.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.30.1",
    "colors": "^1.4.0",
    "cookies": "^0.8.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-handler": "^1.1.4",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^8.5.1",
    "mailgun": "^0.5.0",
    "mailgun-js": "^0.22.0",
    "mongoose": "^6.5.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "react": "^18.2.0",
    "react-redux": "^8.0.2",
    "react-router-bootstrap": "^0.26.2",
    "react-router-dom": "^5.3.3",
    "react-scripts": "^5.0.1",
    "react-stripe-checkout": "^2.6.3",
    "ssl-express-www": "^3.0.8",
    "stripe": "^10.2.0",
    "webpack": "^5.74.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.8",
    "concurrently": "^7.3.0",
    "nodemon": "^2.0.19",
    "postcss": "^8.4.16",
    "tailwindcss": "^3.1.8"
  }
}
